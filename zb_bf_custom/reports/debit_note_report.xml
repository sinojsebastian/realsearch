							<t t-if="count == 0">
								<t t-if="line.tax_ids">
									<span><b>Tax Debit Note</b></span>
									</t>
									<t t-if="not line.tax_ids">
									<span><b>Debit Note</b></span>
									</t>
									<t t-set="count" t-value="count+1"/>
